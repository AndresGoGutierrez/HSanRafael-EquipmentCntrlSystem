# ===========================
# Application Configuration
# ===========================

# The name of the application (used in logs or metadata)
APP_NAME=HSanRafael

# The current version of the application
APP_VERSION=1.0.0

# Debug mode: should be False in production; can be True for local testing
DEBUG=False


# ===========================
# Database Configuration
# ===========================

# Local SQLite database used for testing purposes (pytest)
# This avoids conflicts with the main PostgreSQL database
DATABASE_URL=sqlite:///./test.db


# ===========================
# Security Settings
# ===========================

# Secret key used for signing JWT tokens or encryption
SECRET_KEY=super-secret-key

# Algorithm used for JWT token generation
ALGORITHM=HS256

# Access token expiration time in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30


# ===========================
# Azure Blob Storage (Optional)
# ===========================

# Leave these empty during testing if Azure integration is not required
AZURE_STORAGE_CONNECTION_STRING=
AZURE_CONTAINER_NAME=


# ===========================
# Equipment and CORS Settings
# ===========================

# Maximum number of days equipment can stay checked in
EQUIPMENT_MAX_STAY_DAYS=3

# Allow requests from all
